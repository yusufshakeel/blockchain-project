{
  "testEnvironment": "node",
  "verbose": true,
  "bail": true,
  "testRegex": "(unit).test.js$",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{js,jsx}",
    "!**/coverage/**",
    "!**/output/**",
    "!**/docs/**",
    "!**/node_modules/**",
    "!**/test/**",
    "!**/src/scripts/**",
    "!index.js"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  }
}